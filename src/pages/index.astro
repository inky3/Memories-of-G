---
import Layout from "../layouts/Layout.astro";
import GradientPanel from "../components/GradientPanel.astro";
import Grid from "../components/Grid.astro";

const base = import.meta.env.BASE_URL || "/";
const url  = (p = "/") => `${base}${String(p).replace(/^\/+/, "")}`;
const encode = (p = "/") => url(p).replace(/ /g, "%20");

const highlight = [
  {
    image: encode("/img/UX-UI/iPhone 16 (1).png"),
    title: "Chao Paya Gems",

    // Overlay text
    overlayMeta: "",
    overlayTitle: "แอปพลิเคชั้นท่องเที่ยวริมฝั่งแม่น้ำเจ้าพระยา",
    overlayDesc: ""
  },
  {
    image: encode("/img/graphic/052_โกมล_ควรรำพึง_Magazine-01.jpg"),
    title: "Style Living",

    overlayMeta: "",
    overlayTitle: "นิตยสารที่นำเสนอเฟอร์นิเจอร์และการตกแต่งบ้านในสไตล์มินิมอล",
    overlayDesc: ""
  },
  {
    image: encode("/img/graphic/shop4069.png"),
    title: "ChaTraMue Pop-up",

    overlayMeta: "",
    overlayTitle: "Popup Storeชาตรามือ",
    overlayDesc: ""
  }
];



---
<Layout title="The Memories — Home" activePath="/">
  <section class="section">
    <div class="container hero">
      <div>
        <h1 class="h1">
          <span>MY</span>
          <span>MEMORY</span>
        </h1>
        <p class="p-lead" style="margin-top:8px;">ผลงานจากความทรงจำ</p>
      </div>
      <div>
        <img src={encode("/img/กก.png")} alt="Portrait" />
      </div>
    </div>
  </section>

  <section class="section">
    <div class="container">
      <GradientPanel>
        <p class="p-lead" style="margin:0 0 8px;">My name is</p>
        <h2 class="h2" style="margin:0 0 12px;">Komol<br/>Kuanrumpueng</h2>
        <div class="badges">
          <span class="badge">Graphic Designer</span>
          <span class="badge">UX/UI Designer</span>
        </div>
        <p style="max-width:90ch; margin-top:12px">
          ผมเป็นนักศึกษาออกแบบกราฟิกที่สนใจงาน Graphic และ UX/UI Design …
          การเรียนรู้อย่างต่อเนื่องคือกุญแจสู่ความสำเร็จ และพร้อมรับความท้าทายใหม่เสมอ
        </p>
      </GradientPanel>
    </div>
  </section>

  <section class="section center">
    <div class="container">
      <h2 class="h2 headed">Highlight MY WORK</h2>
      <div style="margin-top:24px">
        <Grid items={highlight} />
      </div>
    </div>
  </section>
</Layout>

<style>
  .headed {
    padding: 100px;
  }
</style>
