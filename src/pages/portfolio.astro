---
<Layout title="The Memories — Portfolio" activePath="/portfolio">
  <!-- Hero section -->
  <section class="hero-section">
    <div class="container">
      <h1 class="hero-title">PORTFOLIO</h1>
    </div>
  </section>

  <!-- Portfolio Content -->
  <section class="section">
    <div class="container">
      <GradientPanel class="light-text">
        <div class="category">
          <div class="category-title">UX / UI</div>
          <Grid items={uxui} />
        </div>

        <div class="category" style="margin-top:28px;">
          <div class="category-title">Graphic</div>
          <Grid items={graphic} />
        </div>
      </GradientPanel>
    </div>
  </section>

  <style>
  /* === HERO SECTION === */
  .hero-section {
    position: relative;
    background: url('/img/กก3.png') no-repeat center top;
    background-size: 20%;           /* slight zoom-in (was contain) */
    background-attachment: scroll;
    background-position: center 45%; /* adjust 45–55% for framing */
    padding: 100px 0 100px;
    text-align: center;
  }

  .hero-title {
    font-size: 2.5rem;
    font-weight: 800;
    letter-spacing: 2px;
    color: #ffffff;
    margin: 0;
    text-transform: uppercase;
  }

  @media (max-width: 992px) {
    .hero-title {
      font-size: 2.5rem;
    }
    .hero-section {
      background-size: 130%;         /* a bit tighter on mobile */
      padding: 80px 0;
    }
  }
  </style>
</Layout>
