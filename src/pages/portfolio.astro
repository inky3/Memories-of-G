---
<Layout title="The Memories — Portfolio" activePath="/portfolio">
  <!-- Hero -->
  <section
    class="section"
    style={`background: url('${encode("/img/กก3.png")}') center/cover no-repeat; padding: 140px 0 120px; color:#d1d1d1;`}
  >
    <div class="container">
      <h1 class="h1">PORTFOLIO</h1>
    </div>
  </section>

  <!-- Content -->
  <section class="section">
    <div class="container">
      <GradientPanel class="light-text">
        <div class="category">
          <div class="category-title">UX / UI</div>
          <Grid items={uxui} />
        </div>

        <div class="category" style="margin-top:28px;">
          <div class="category-title">Graphic</div>
          <Grid items={graphic} />
        </div>
      </GradientPanel>
    </div>
  </section>
</Layout>
