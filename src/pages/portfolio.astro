---
import Layout from "../layouts/Layout.astro";
import Grid from "../components/Grid.astro";
import GradientPanel from "../components/GradientPanel.astro";

const base = import.meta.env.BASE_URL || "/";
const url  = (p = "/") => `${base}${String(p).replace(/^\/+/, "")}`;
const encode = (p = "/") => url(p).replace(/ /g, "%20");

/** UX/UI Section */
const uxui = [
  {
    image: encode("/img/UX-UI/iPhone 16 (1).png"),
    title: "Chao Paya Gems",
    href: "/portfolio/chao-paya-gems",
    overlayMeta: "UX/UI",
    overlayTitle: "Chao Paya Gems",
    overlayDesc: "E-commerce prototype—product list, PDP, cart, and checkout."
  },
  {
    image: encode("/img/UX-UI/Desktop - 1 (1).png"),
    title: "Trip Go",
    href: "/portfolio/tripgo",
    overlayMeta: "UX/UI",
    overlayTitle: "Trip Go",
    overlayDesc: "Travel planning app with itinerary management and map integration."
  },
  {
    image: encode("/img/UX-UI/Index.jpg"),
    title: "GBPT3D",
    href: "/portfolio/gbpt3d",
    overlayMeta: "UX/UI",
    overlayTitle: "GBPT3D",
    overlayDesc: "UX refresh for a 3D marketplace—clear visuals and streamlined onboarding."
  },
];

/** Graphic Section */
const graphic = [
  {
    image: encode("/img/graphic/65122525052_โกมล_ควรรำพึง_KomolTH_Lettering-01.png"),
    title: "TypeDesign SSRU",
    href: "/portfolio/typedesign-ssru",
    overlayMeta: "Graphic",
    overlayTitle: "TypeDesign SSRU",
    overlayDesc: "Custom Thai–English display typeface exploring geometric balance."
  },
  {
    image: encode("/img/graphic/Untitled-2-01.png"),
    title: "My Obsession The Seiko",
    href: "/portfolio/seiko",
    overlayMeta: "Graphic",
    overlayTitle: "My Obsession The Seiko",
    overlayDesc: "Editorial layout series inspired by precision and minimal design."
  },
  {
    image: encode("/img/graphic/ปก.jpg"),
    title: "Sony MDR-7502",
    href: "/portfolio/sony-mdr-7502",
    overlayMeta: "Graphic",
    overlayTitle: "Sony MDR-7502",
    overlayDesc: "Product poster emphasizing proportion, contrast, and hierarchy."
  },
  {
    image: encode("/img/graphic/052_โกมล_ควรรำพึง_Magazine-01.jpg"),
    title: "Style Living",
    href: "/portfolio/style-living",
    overlayMeta: "Graphic",
    overlayTitle: "Style Living — Editorial",
    overlayDesc: "Magazine layout exploration focusing on whitespace and type rhythm."
  },
  {
    image: encode("/img/graphic/1-02.jpg"),
    title: "Olympic Pictogram",
    href: "/portfolio/olympic-pictogram",
    overlayMeta: "Graphic",
    overlayTitle: "Olympic Pictogram",
    overlayDesc: "Icon system study: motion, consistency, and grid alignment."
  },
  {
    image: encode("/img/graphic/shop4069.png"),
    title: "ChaTraMue",
    href: "/portfolio/chatramue",
    overlayMeta: "Graphic",
    overlayTitle: "ChaTraMue Pop-up",
    overlayDesc: "Kiosk concept—zoning, signage, and retail flow exploration."
  },
  {
    image: encode("/img/graphic/052_โกมล ควรรำพึง.png"),
    title: "Infographic: AI for Graphic",
    href: "/portfolio/infographic-ai",
    overlayMeta: "Graphic",
    overlayTitle: "Infographic: AI for Graphic",
    overlayDesc: "Information design—clarity, storytelling, and visual hierarchy."
  },
];
---
<Layout title="The Memories — Portfolio" activePath="/portfolio">
  <!-- Hero section -->
  <section class="hero-section">
    <div class="container">
      <h1 class="hero-title">PORTFOLIO</h1>
    </div>
  </section>

  <!-- Portfolio Content -->
  <section class="section">
    <div class="container">
      <GradientPanel class="light-text">
        <div class="category">
          <div class="category-title">UX / UI</div>
          <Grid items={uxui} />
        </div>

        <div class="category" style="margin-top:28px;">
          <div class="category-title">Graphic</div>
          <Grid items={graphic} />
        </div>
      </GradientPanel>
    </div>
  </section>

  <style>
  /* === HERO SECTION === */
  .hero-section {
    position: relative;
    background: url('/img/กก3.png') no-repeat center top;
    background-size: 140%;           /* slight zoom-in (was contain) */
    background-attachment: scroll;
    background-position: center 45%; /* adjust 45–55% for framing */
    padding: 100px 0 100px;
    text-align: center;
  }

  .hero-title {
    font-size: 4rem;
    font-weight: 800;
    letter-spacing: 2px;
    color: #d1d1d1;
    margin: 0;
    text-transform: uppercase;
  }

  @media (max-width: 992px) {
    .hero-title {
      font-size: 2.5rem;
    }
    .hero-section {
      background-size: 130%;         /* a bit tighter on mobile */
      padding: 80px 0;
    }
  }
  </style>
</Layout>
